# Database Configuration
POSTGRES_DB=ghostworks
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# API Configuration
API_PORT=8000
JWT_SECRET_KEY=your-secret-key-change-in-production

# Security Configuration
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' https:; frame-ancestors 'none';"

# Cookie Security
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=5
RATE_LIMIT_BURST_SIZE=10

# Input Validation
MAX_REQUEST_SIZE=10485760
MAX_JSON_PAYLOAD_SIZE=1048576
MAX_FORM_FIELDS=100
MAX_FORM_FIELD_SIZE=1048576

# Web Configuration
WEB_PORT=3000
NODE_ENV=development

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# Observability Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development